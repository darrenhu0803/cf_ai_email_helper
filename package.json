{
  "name": "cf-ai-email-helper",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered email helper on Cloudflare",
  "workspaces": [
    "email-helper-worker",
    "email-helper-ui"
  ],
  "scripts": {
    "dev:worker": "npm run dev --workspace=email-helper-worker",
    "dev:ui": "npm run dev --workspace=email-helper-ui",
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:ui\"",
    "build:worker": "npm run build --workspace=email-helper-worker",
    "build:ui": "npm run build --workspace=email-helper-ui",
    "build": "npm run build:worker && npm run build:ui",
    "deploy:worker": "npm run deploy --workspace=email-helper-worker",
    "deploy:ui": "npm run deploy --workspace=email-helper-ui",
    "deploy": "npm run deploy:worker && npm run deploy:ui"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


